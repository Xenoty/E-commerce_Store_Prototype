@{
    ViewBag.Title = "Home Page";
}

<style>
    .overlay {
        background-color: rgba(0,0,0,.3);
        position: absolute;
        z-index: 1;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }

    #landingVideo {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
    }
    .fullscreen{
    /*    position:relative;*/
    }
    .hero{
        position:absolute;
        left:50%;
        top:50%;
        transform: translate(-50%, -50%);
        z-index: 3;
/*        overflow:auto;*/
    }

    .hero h1 {
        color: white;
        font-size: 26px;
        margin-bottom: 6vh;
        width: fit-content;
        text-align: center;
    }

    .cta {
        max-width: fit-content;
        margin: auto;
    }


</style>

<video autoplay muted loop id="landingVideo">
    <source src="~/Content/Marketing/Surflocal-1.m4v" type="video/mp4" />
    Your browser does not support HTML5 video
</video>

<div class="wrapper">
    <div class="overlay">
    </div>
    <div class="hero">
        <h1>
            Your Local surf shop, we know the waves, we know <br />what you need.
        </h1>
        <div style="text-align:center;">
            <a href="@Url.Action("Index","Products")" class="cta box-shadow">Shop Now</a>
        </div>
    </div>
</div>